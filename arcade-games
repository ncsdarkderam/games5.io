    <div class="overlay" onclick="closeGame()"></div>
    <div class="game-player">
        <iframe id="gameFrame" src=""></iframe>
        <button class="close-btn" onclick="closeGame()">Close</button>
        <button class="fullscreen-btn" onclick="toggleFullScreen()">Full Screen</button>
    </div>

    <script>
        // Game section management
        document.querySelectorAll('.games-grid').forEach(grid => {
            const games = grid.querySelectorAll('.game-card');
            if(games.length > 20) {
                const container = grid.parentElement;
                const hiddenDiv = container.querySelector('.hidden-games');
                games.forEach((game, index) => {
                    if(index >= 20) {
                        grid.removeChild(game);
                        hiddenDiv.appendChild(game);
                    }
                });
            }
        });

        function showMoreGames(btn) {
            const container = btn.parentElement;
            const hiddenDiv = container.querySelector('.hidden-games');
            hiddenDiv.classList.add('show-more');
            btn.style.display = 'none';
        }

        // Fullscreen functionality
        function toggleFullScreen() {
            const player = document.querySelector('.game-player');
            if(!document.fullscreenElement) {
                player.requestFullscreen?.();
                document.querySelector('.fullscreen-btn').textContent = 'Exit Full Screen';
            } else {
                document.exitFullscreen?.();
                document.querySelector('.fullscreen-btn').textContent = 'Full Screen';
            }
        }

        document.addEventListener('fullscreenchange', () => {
            if(!document.fullscreenElement) {
                document.querySelector('.fullscreen-btn').textContent = 'Full Screen';
            }
        });

        function playGame(url) {
            document.querySelector('.game-player').style.display = 'block';
            document.querySelector('.overlay').style.display = 'block';
            document.getElementById('gameFrame').src = url;
        }

        function closeGame() {
            if(document.fullscreenElement) document.exitFullscreen();
            document.querySelector('.game-player').style.display = 'none';
            document.querySelector('.overlay').style.display = 'none';
            document.getElementById('gameFrame').src = '';
        }

        // Footer content
        document.getElementById('currentYear').textContent = new Date().getFullYear();
        document.getElementById('domainName').textContent = window.location.hostname;

        // Navigation active state
        document.querySelectorAll('nav a').forEach(link => {
            link.addEventListener('click', function(e) {
                document.querySelector('nav a.active')?.classList.remove('active');
                this.classList.add('active');
            });
        });
    </script>
    


